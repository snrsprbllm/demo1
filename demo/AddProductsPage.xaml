<UserControl x:Class="demo.AddProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:demo"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
             Background="{StaticResource MainBackground}">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Название продукта:" Style="{StaticResource TextStyle}" FontSize="18"></TextBlock>
            <TextBox x:Name="ProductNameTextBox" Margin="0, 5 , 5 , 0" Background="{StaticResource SecondBackground}"></TextBox>
            <TextBlock Text="Артикул:" Style="{StaticResource TextStyle}" FontSize="18"></TextBlock>
            <TextBox x:Name="ArticleTextBox" Margin="0, 5 , 5 , 0" Background="{StaticResource SecondBackground}"></TextBox>
            <TextBlock Text="Минимальная стоимость продукта:" Style="{StaticResource TextStyle}" FontSize="18"></TextBlock>
            <TextBox x:Name="MinCostTextBox" Margin="0, 5 , 5 , 0" Background="{StaticResource SecondBackground}"></TextBox>
            <TextBlock Text="Ширина рулона:" Style="{StaticResource TextStyle}" FontSize="18"></TextBlock>
            <TextBox x:Name="RollWidthTextBox" Margin="0, 5 , 5 , 0" Background="{StaticResource SecondBackground}"></TextBox>
            <TextBlock Text="Тип продукта:" Style="{StaticResource TextStyle}" FontSize="18"></TextBlock>
            <ComboBox x:Name="TypeComboBox" Text="Название продукта:" Margin="10" Background="{StaticResource SecondBackground}" FontSize="18"></ComboBox>
            <TextBlock Text="Тип материала:" Style="{StaticResource TextStyle}" FontSize="18"></TextBlock>
            <ComboBox x:Name="MaterialComboBox" Text="Название продукта:" Margin="10" Background="{StaticResource SecondBackground}" FontSize="18"></ComboBox>


            <Button Style="{StaticResource ButtonStyle}" Content="Добавить продукт" Background="{StaticResource Accent}" Foreground="{StaticResource MainBackground}" FontWeight="Light" FontSize="24" Click="AddProduct_Click"></Button>
        </StackPanel>
    </ScrollViewer>
    
   
</UserControl>
